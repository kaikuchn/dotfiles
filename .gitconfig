[core]
        excludesfile = ~/.global_gitignore
        editor = vi
	attributesfile = ~/.gitattributes
[user]
        name = Kai Kuchenbecker
        email = kuchenbecker.k@gmail.com
[alias]
        co = checkout
        st = status
        ci = commit --verbose
        who = config --global user.email
	sf = diff-tree --no-commit-id --name-only -r
	cb = fetch --prune origin
[push]
        default = upstream
	autoSetupRemote = true
[github]
        user = kaikuchn
[commit]
        template = ~/.gitmessage
	verbose = true
[pull]
        rebase = true
[init]
	defaultBranch = main
[log]
	showSignature = true
